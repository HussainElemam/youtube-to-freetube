{
  "manifest_version": 3,
  "name": "YouTube to FreeTube Redirector",
  "version": "1.0",
  "description": "Redirects YouTube links to FreeTube app",
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*", "*://*.youtu.be/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.youtu.be/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
